<div class="jumbotron">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6" style="margin-top: 100px">
      <div class="panel panel-default">

        <div class="panel-heading">
          <h3 class="text-center"> Create an Account!</h3>
        </div>

        <div class="panel-body">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group center-block">
            <%= f.email_field :email, placeholder: 'your-name@email.com', class: "input-lg  center-block" %>
          </div>

          <div class="form-group center-block">
            <%= f.password_field :password, autocomplete: "off",  placeholder: 'Your password', class: "input-lg center-block" %>
          </div>

          <div class="form-group center-block">
            <%= f.password_field :password_confirmation, autocomplete: "off",  placeholder: 'Repeat password', class: "input-lg center-block" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign Up", class: "btn btn-block btn-lg btn-primary" %>
          </div>

        <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
