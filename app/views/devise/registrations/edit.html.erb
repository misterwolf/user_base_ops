<div class="jumbotron">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6" style="margin-top: 100px">
      <div class="panel panel-default">

        <div class="panel-heading">
          <h3 class="text-center"> Update Password!</h3>
        </div>

        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

            <%= f.hidden_field :email, autofocus: true %>

            <div class="form-group center-block">
              <%= f.password_field :password, autocomplete: "off", placeholder: 'new password', class: "input-lg  center-block" %>
            </div>

            <div class="form-group center-block">
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'repeat new password', class: "input-lg  center-block" %>
            </div>

            <div class="form-group center-block">
              <%= f.password_field :current_password, autocomplete: "off", placeholder: 'your current password', class: "input-lg  center-block" %>
            </div>

            <div class="form-group center-block">
              <%= f.submit "Update", class: "btn btn-block btn-lg btn-primary" %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
